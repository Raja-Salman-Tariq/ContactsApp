<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    >


    <TextView
        android:id="@+id/rv_files_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name..."
        android:textColor="@color/black_alt"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/rv_files_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timestamp..."
        android:textColor="@color/black_alt"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/rv_files_name"
        app:layout_constraintTop_toBottomOf="@id/rv_files_name"
        />

    <View
        android:id="@+id/rv_app_divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/teal_700"
        app:layout_constraintStart_toStartOf="@id/rv_files_name"
        app:layout_constraintTop_toBottomOf="@id/rv_files_timestamp"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>