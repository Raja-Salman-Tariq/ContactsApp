<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="15dp"
    android:background="@drawable/drawer_bg"
    >

    <TextView
        android:id="@+id/nav_drawer_header_upper_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Contacts App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white_alt"
        android:layout_marginBottom="-15dp"
        />

    <TextView
        android:id="@+id/nav_drawer_header_lower_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nav_drawer_header_upper_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Home"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white_alt"
        android:layout_marginTop="-15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>